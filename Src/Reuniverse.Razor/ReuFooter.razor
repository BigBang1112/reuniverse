<footer class="reu-footer @CssClass" @attributes="AdditionalAttributes">
    <ReuContainer>
        <div class="reu-footer-important">
            <div class="copyright">
                @CopyrightContent
            </div>
            <div class="links">
                @LinkContent
            </div>
        </div>
        @ExtraContent
    </ReuContainer>
</footer>

@code {
    /// <summary>
    /// Content for copyright information.
    /// </summary>
    [Parameter]
    public RenderFragment? CopyrightContent { get; set; }

    /// <summary>
    /// Content for footer links.
    /// </summary>
    [Parameter]
    public RenderFragment? LinkContent { get; set; }

    /// <summary>
    /// Extra content to include in the footer.
    /// </summary>
    [Parameter]
    public RenderFragment? ExtraContent { get; set; }

    /// <summary>
    /// Additional CSS classes to apply to the footer element.
    /// </summary>
    [Parameter]
    public string? CssClass { get; set; }

    [Parameter(CaptureUnmatchedValues = true)]
    public IDictionary<string, object>? AdditionalAttributes { get; set; }
}