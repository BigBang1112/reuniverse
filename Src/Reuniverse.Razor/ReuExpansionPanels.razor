<div class="reu-expansion-panels @CssClass" @attributes="AdditionalAttributes">
    <CascadingValue Value="this" IsFixed="true">
        @ChildContent
    </CascadingValue>
</div>

@code {
    internal List<ReuExpansionPanel> Panels { get; } = new();

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// Additional CSS classes to apply to the element.
    /// </summary>
    [Parameter]
    public string? CssClass { get; set; }

    [Parameter]
    public bool SingleExpansion { get; set; }

    [Parameter(CaptureUnmatchedValues = true)]
    public IDictionary<string, object>? AdditionalAttributes { get; set; }

    internal void Register(ReuExpansionPanel panel)
    {
        Panels.Add(panel);
        StateHasChanged();
    }

    public void CollapseAll()
    {
        foreach (var panel in Panels)
        {
            panel.Collapse();
        }
        StateHasChanged();
    }
}